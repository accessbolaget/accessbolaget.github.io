dark = #352929

html, body
	margin 0
	padding 0
	height 100%
	
	a:link
		color dark
		text-decoration none

	a:visited
		color dark
		text-decoration none

.globalwrapper
	min-height 100%
	position relative
	
.page-content
	padding-bottom 200px
	

.site-footer
	font-family AvenirNext-regular, helvetica, arial, sans-serif
	width 960px
	height 200px
	margin 0 auto
	
	.contact-list
		list-style-type none
		
	
.globalfooter
	background #292929
	color white
	height 200px
	width 100%
	position absolute
	bottom 0
	left 0
	
	a:link
		color white
		text-decoration none

	a:visited
		color white
		text-decoration none

.mainlogo
	width 300px
	padding 10px


.site-header
	width 960px
	height 100px
	margin 0 auto
	
.trigger
	
.site-nav
	display inline-block
	text-align left
	height 100px
	vertical-align top
	
	.page-link
		line-height 100px
		margin-left 10px
		margin-right 10px
		
	a
		font-family AvenirNext-Medium, helvetica, arial, sans-serif
		font-size 10px
		text-transform uppercase
			
	a:link
		color dark
		text-decoration none

	a:visited
		color dark
		text-decoration none
	
.logo 
	display: inline-block
	margin-right 200px
	height 100px
	

.post-list
	list-style-type none

.post
	font-family AvenirNext-Regular, helvetica, arial, sans-serif
	width 600px
	margin 0 auto
	margin-bottom 100px
	
	img
		margin-bottom 50px
		margin-top 50px
		max-width 600px
		
.text
	font-size 12px
	color #b5b5b5